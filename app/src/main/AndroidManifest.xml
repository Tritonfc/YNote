<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eararchitect.ynote">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PremiumNotesActivity"></activity>
        <activity android:name=".MainActivitySearch" />
        <activity android:name=".SlideShowB1Activity" />
        <activity android:name=".SlideShowB2Activity" />
        <activity android:name=".SlideShowB3Activity" />
        <activity android:name=".ClassB3NotesActivity" />
        <activity android:name=".ClassB2NotesActivity" />
        <activity android:name=".ClassB1NotesActivity" />
        <activity android:name=".ScheduleClassActivity" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".B3NoteViewer" />
        <activity android:name=".B2NoteViewer" />
        <activity android:name=".B1NoteViewer" />
        <activity android:name=".ViewClassActivity" />
        <activity android:name=".AnnouncementsActivity" />
        <activity android:name=".AddB3Note" />
        <activity android:name=".AddB2Note" />
        <activity android:name=".AddB1Note" />
        <activity
            android:name=".B3NotesActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".B2NotesActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".AddPeopleActivity" />
        <activity android:name=".PeopleActivity" />
        <activity
            android:name=".B1NotesActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ClassesActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>